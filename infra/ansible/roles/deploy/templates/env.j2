# infra/ansible/roles/deploy/templates/.env.j2
# Application Configuration
DOMAIN_NAME={{ domain_name }}
LETSENCRYPT_EMAIL={{ email }}

# Database (if needed)
POSTGRES_USER=todouser
POSTGRES_PASSWORD={{ lookup('password', '/dev/null chars=ascii_letters,digits length=32') }}
POSTGRES_DB=tododb

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# API Configuration
AUTH_API_URL=http://auth-api:8080
TODOS_API_URL=http://todos-api:3000
USERS_API_URL=http://users-api:8081

# JWT Secret
JWT_SECRET={{ lookup('password', '/dev/null chars=ascii_letters,digits length=64') }}

# Environment
NODE_ENV=production
GO_ENV=production

