FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Build static files
RUN npm run build

# Install serve globally to serve static files
RUN npm install -g serve

# Expose port 8080 for Traefik internal routing
EXPOSE 8080

# Start the static server
CMD ["serve", "-s", "dist", "-l", "8080"]
